<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
<div class="field">
  <div class="block">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
  <div class="block">
  <%= f.label :body %>
  <%= f.text_area :body %>
  </div>
  
  <%= f.submit 'Update Book' %>
</div>

 <span>
<%= link_to 'Show', @book, class: "show_#{@book.id}" %> |
<%= link_to "back", "/books/" %>  
 </span> 
<% end %>