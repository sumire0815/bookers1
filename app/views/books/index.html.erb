<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book, class: "show_#{book.id}" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "edit_#{book.id}" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy_#{book.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: @book do |f| %>
<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error">
  <div class="errormessage"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>


<div class="field">
  <div class="block">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
  <div class="block">
  <%= f.label :body %>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>